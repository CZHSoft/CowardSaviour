            android:name="com.zzia.cowardsaviour.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity  android:name="com.zzia.cowardsaviour.activity.TabLoginActivity"></activity>
        <activity  android:name="com.zzia.cowardsaviour.activity.TabSigninActivity"></activity>
        <activity  android:name="com.zzia.cowardsaviour.activity.TabSettingActivity"></activity>
